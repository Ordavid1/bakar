    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', () => {
                    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true' || false;
                    mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
                    mobileMenu.classList.toggle('hidden');
                });
            }
            
            document.querySelectorAll('#mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    if (mobileMenu) {
                        mobileMenu.classList.add('hidden');
                        mobileMenuButton.setAttribute('aria-expanded', 'false');
                    }
                });
            });

            // Smooth scroll and active nav highlighting
            const navLinks = document.querySelectorAll('nav a[href^="#"], #mobile-menu a[href^="#"]');
            const sections = document.querySelectorAll('.content-section');

            const observerOptions = {
                root: null,
                rootMargin: '-40% 0px -60% 0px', // Adjusted rootMargin
                threshold: 0
            };

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const targetId = entry.target.id;
                        document.querySelectorAll('header nav a, #mobile-menu a').forEach(link => {
                            link.classList.toggle('active-nav', link.getAttribute('href') === `#${targetId}`);
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => observer.observe(section));
            
            if (sections.length > 0 && window.location.hash === "") {
                 const firstSectionId = sections[0].id;
                 document.querySelectorAll('header nav a').forEach(link => {
                    if (link.getAttribute('href') === `#${firstSectionId}`) {
                        link.classList.add('active-nav');
                    }
                });
            }


            // Interactive cards toggle
            document.querySelectorAll('.interactive-card header').forEach(header => {
                header.addEventListener('click', () => {
                    const contentId = header.parentElement.dataset.contentId;
                    const contentElement = document.getElementById(contentId);
                    const icon = header.querySelector('span');
                    if (contentElement) {
                        const isHidden = contentElement.classList.contains('hidden-content');
                        contentElement.classList.toggle('hidden-content');
                        icon.classList.toggle('rotate-180', !isHidden);
                        // ARIA attributes for accessibility can be added here if these are like accordions
                    }
                });
            });

            // Accordion toggle with ARIA
            document.querySelectorAll('.accordion-header').forEach(header => {
                header.addEventListener('click', () => {
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('span');
                    const isExpanded = header.getAttribute('aria-expanded') === 'true';

                    header.setAttribute('aria-expanded', !isExpanded);
                    content.classList.toggle('hidden-content');
                    content.hidden = isExpanded; // Toggle hidden attribute for accessibility
                    icon.textContent = isExpanded ? '►' : '▼';
                });
            });
            
            // Timeline navigation with ARIA
            const timelineNavItems = document.querySelectorAll('.timeline-nav-item');
            const timelineContents = document.querySelectorAll('.timeline-item-content');

            timelineNavItems.forEach(item => {
                item.addEventListener('click', () => {
                    const targetId = item.dataset.timelineTarget;
                    
                    timelineNavItems.forEach(nav => {
                        nav.classList.remove('active');
                        nav.setAttribute('aria-selected', 'false');
                    });
                    item.classList.add('active');
                    item.setAttribute('aria-selected', 'true');

                    timelineContents.forEach(content => {
                        const isTarget = content.id === targetId;
                        content.classList.toggle('hidden-content', !isTarget);
                        content.hidden = !isTarget;
                    });
                });
            });
            if (timelineNavItems.length > 0) {
                timelineNavItems[0].click(); // Programmatically click to set initial state
            }

            // Tabs navigation for Advanced Analytics with ARIA
            const tabButtons = document.querySelectorAll('#advanced-analytics .tab-button');
            const tabContents = document.querySelectorAll('#advanced-analytics .tab-content');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetId = button.dataset.tabTarget;

                    tabButtons.forEach(btn => {
                        btn.classList.remove('active');
                        btn.setAttribute('aria-selected', 'false');
                    });
                    button.classList.add('active');
                    button.setAttribute('aria-selected', 'true');

                    tabContents.forEach(content => {
                        const isTarget = content.id === targetId;
                        content.classList.toggle('hidden', !isTarget);
                        content.hidden = !isTarget;
                    });
                });
            });
            if (tabButtons.length > 0) {
                 tabButtons[0].click(); // Programmatically click to set initial state
            }

            // Chart.js Examples
            const budgetUtilCtx = document.getElementById('budgetUtilizationChart');
            if (budgetUtilCtx) {
                new Chart(budgetUtilCtx, {
                    type: 'doughnut',
                    data: { labels: ['נוצל', 'נותר'], datasets: [{ label: 'ניצול תקציב', data: [75, 25], backgroundColor: ['#3b82f6', '#93c5fd'], borderColor: ['#2563eb', '#60a5fa'], borderWidth: 1 }] },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'top', labels: { font: { family: 'Inter'}}}, tooltip: { bodyFont: { family: 'Inter'}, titleFont: { family: 'Inter'}}} }
                });
            }

            const costVarianceCtx = document.getElementById('costVarianceChart');
            if (costVarianceCtx) {
                new Chart(costVarianceCtx, {
                    type: 'bar',
                    data: { labels: ['חומרים', 'עבודה', 'קבלני משנה', 'תקורה'], datasets: [{ label: 'חריגה/חיסכון מהתקציב (אלפי ש"ח)', data: [50, -20, 15, -5], backgroundColor: (c) => c.dataset.data[c.dataIndex] >= 0 ? '#ef4444' : '#22c55e', borderColor: (c) => c.dataset.data[c.dataIndex] >= 0 ? '#dc2626' : '#16a34a', borderWidth: 1 }] },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, ticks: { font: { family: 'Inter' } } }, x: { ticks: { font: { family: 'Inter' } } } }, plugins: { legend: { display: false }, tooltip: { bodyFont: { family: 'Inter'}, titleFont: { family: 'Inter'}}} }
                });
            }

            // Chat button and modal logic
            const openChatButton = document.getElementById('openChatButton');
            const chatModal = document.getElementById('chatModal');
            const closeChatButton = document.getElementById('closeChatButton');
            const chatForm = document.getElementById('chatForm');
            const chatFormStatus = document.getElementById('chatFormStatus');


            if (openChatButton && chatModal && closeChatButton && chatForm) {
                openChatButton.addEventListener('click', () => chatModal.classList.remove('hidden'));
                closeChatButton.addEventListener('click', () => chatModal.classList.add('hidden'));
                chatModal.addEventListener('click', (e) => { if (e.target === chatModal) chatModal.classList.add('hidden'); });

                chatForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    chatFormStatus.textContent = 'שולח...';
                    chatFormStatus.className = 'mt-4 text-sm text-blue-600';
                    const formData = new FormData(chatForm);
                    const data = Object.fromEntries(formData.entries());

                    try {
                        const response = await fetch('/send-chat-form', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(data)
                        });
                        if (response.ok) {
                            chatForm.reset();
                            chatFormStatus.textContent = 'הטופס נשלח בהצלחה!';
                            chatFormStatus.className = 'mt-4 text-sm text-green-600';
                            setTimeout(() => {
                                chatModal.classList.add('hidden');
                                chatFormStatus.textContent = '';
                            }, 3000);
                        } else {
                            const errorResult = await response.json().catch(() => ({error: 'שליחת הטופס נכשלה. נסה שוב מאוחר יותר.'}));
                            chatFormStatus.textContent = `שגיאה: ${errorResult.error || 'נסה שוב מאוחר יותר.'}`;
                            chatFormStatus.className = 'mt-4 text-sm text-red-600';
                        }
                    } catch (err) {
                        console.error('Chat form submission error:', err);
                        chatFormStatus.textContent = 'שגיאת רשת. בדוק את החיבור ונסה שוב.';
                        chatFormStatus.className = 'mt-4 text-sm text-red-600';
                    }
                });
            }
        });
    </script>
